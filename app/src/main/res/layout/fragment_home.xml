<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.lekhpal.lekhpalsangh.HomeFragment">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="368dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/lekhpal_title"
                app:srcCompat="@mipmap/lekhpallogo" />
        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="@string/lekhpal_title"
                android:textSize="22sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/lekhpal_message" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/chat"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Chat"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/lekhpalSangh"
                style="@style/button_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="@string/lekhpal_sangh_button"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/khatauni"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="@string/khatauni_button"
                android:textAllCaps="false" />
        </TableRow>


        <TableRow>

            <Button
                android:id="@+id/edistrict"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="@string/edistrict_button"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/govPortal"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="@string/government_portal_button"
                android:textAllCaps="false" />
        </TableRow>


        <TableRow>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/lekhpalNews"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="@string/lekhpal_sangh_news_button"
                android:textAllCaps="false" />
        </TableRow>


        <TableRow>

            <Button
                android:id="@+id/contact"
                style="@style/button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="@string/contact_button"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow>

            <TextView />
        </TableRow>

        <TableRow>

            <TextView />
        </TableRow>

        <TableRow>

            <TextView />
        </TableRow>
    </TableLayout>


</ScrollView>
